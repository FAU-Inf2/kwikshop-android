<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#00ffffff">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_shoppingList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/defaultEditableItem" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.melnykov.fab.FloatingActionButton"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        fab:fab_colorNormal="@color/fab_Normal"
        fab:fab_colorPressed="@color/fab_Pressed"
        fab:fab_colorRipple="@color/fab_Ripple"
        android:src="@drawable/ic_action_add" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/defaultEditableItem"
        android:hint="@string/defaultItem"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold"
        android:background="@drawable/textviewborder"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:maxHeight="25dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/ic_action_add"
        android:singleLine="true"
        android:layout_below="@+id/section_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/defaultEditableItem"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/sort_by"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/spinner"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner"
            android:maxHeight="26dp"
            android:layout_weight="1.05"
            android:outlineProvider="background"
            android:gravity="center_vertical|right" />

        <Spinner
            android:layout_width="97dp"
            android:layout_height="fill_parent"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:spinnerMode="dropdown"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_margin="10dp" />

    </TableRow>

</RelativeLayout>
