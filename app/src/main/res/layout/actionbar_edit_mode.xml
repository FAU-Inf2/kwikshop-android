<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal">

    <ImageButton
        android:id="@+id/button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_white_24dp"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/button_save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />

    <ImageButton
        android:id="@+id/button_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_to_cart"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/button_save"
        android:layout_toRightOf="@+id/button_remove"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />

    <ImageButton
        android:id="@+id/button_remove_from_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_from_cart"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/button_save"
        android:layout_toRightOf="@+id/button_add_to_cart"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />




    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:src="@drawable/ic_done_white_24dp"
        android:background="@android:color/transparent"
        android:paddingLeft="30dip"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>