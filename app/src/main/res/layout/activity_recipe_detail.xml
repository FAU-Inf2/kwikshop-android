<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="de.fau.fau.mad.kwikshop.android.view.RecipeDetailActivity"
    android:background="@color/text_icons">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RecipeName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:selectAllOnFocus="true"
        android:text="SAMPLE TEXT"
        android:singleLine="true"
        android:inputType="textCapSentences"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView_RecipeName"
        android:weightSum="1">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/recipe_detail_numberPicker"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/recipe_detail_spinner"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

    </TableRow>

</RelativeLayout>
