<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_light"
    tools:context=".MainActivity$PlaceholderFragment"
                android:nestedScrollingEnabled="false">


    <!--Other content of the view-->

        <!--Quick add bar-->
        <RelativeLayout
            android:id="@+id/quickAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="@color/text_icons">


            <MultiAutoCompleteTextView
                android:id="@+id/textView_quickAdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/defaultItem"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="textCapSentences"/>

            <ImageButton
                android:id="@+id/button_quickAdd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView_quickAdd"
                android:layout_alignEnd="@id/textView_quickAdd"
                android:layout_alignRight="@id/textView_quickAdd"
                android:layout_alignTop="@id/textView_quickAdd"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_add" />

        </RelativeLayout>

    <View
        android:id="@+id/divider_top"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_below="@+id/quickAdd"/>

    <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
        android:id="@+id/list_shoppingList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/divider_top"
        android:nestedScrollingEnabled="false"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_shoppingList"
        android:id="@+id/divider_table"
        android:background="@color/accent_material_light"
        android:weightSum="1"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/shoppinglist_divider_textview"
            android:id="@+id/textview_divider"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/text_icons"
            android:singleLine="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="0"
                android:id="@+id/cartCounter"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/text_icons" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/items"
                android:id="@+id/textview_items"
                android:textColor="@color/text_icons"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

    </TableRow>

    <View
        android:id="@+id/space_bottom"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/text_icons"
        android:layout_below="@+id/listentry"
        android:visibility="gone" />

    <view
            android:id="@+id/fab"
            class="com.melnykov.fab.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:layout_weight="10"
            android:src="@drawable/ic_action_add"
            fab:fab_colorNormal="@color/fab_Normal"
            fab:fab_colorPressed="@color/fab_Pressed"
            fab:fab_colorRipple="@color/fab_Ripple" />

    <!--Floating Action button-->


</RelativeLayout>
