<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fau.cs.mad.kwikshop.android" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <!-- Map integration -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustResize"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_android_api_key"/>


        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="kwikshop.is.nice" />

            </intent-filter>
        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />
        </activity>
        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.ShoppingListDetailActivity"
            android:label="@string/title_activity_shopping_list_detail"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />
        </activity>
        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.ItemDetailsActivity"
            android:label="@string/title_activity_shopping_list_detail"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ShoppingListActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ShoppingListActivity" />
        </activity>
        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.ShoppingListActivity"
            android:label="@string/title_activity_shopping_list"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.SettingActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.ListOfRecipesActivity"
            android:label="@string/title_activity_list_of_recipes"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />
        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.RecipeDetailActivity"
            android:label="@string/title_activity_recipe_detail"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>

        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.RecipeItemDetailsActivity"
            android:label="@string/title_activity_recipe_item_details"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>



        <activity
            android:name="de.fau.cs.mad.kwikshop.android.view.LocationActivity"
            android:label="@string/title_activity_location"
            android:parentActivityName="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.kwikshop.android.view.ListOfShoppingListsActivity" />

        </activity>


    </application>

</manifest>
