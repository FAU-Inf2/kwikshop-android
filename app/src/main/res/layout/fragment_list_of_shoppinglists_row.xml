<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@android:color/transparent"
    >


    <RelativeLayout
        android:id="@+id/list_row_Main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_row_textView_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:textColor="@color/primary_text"
            android:text="Shopping list Name"
            android:layout_toLeftOf="@+id/shoppinglist_textView_lastModifiedDate" />

        <TextView
            android:id="@+id/shoppinglist_textView_lastModifiedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/07/2016"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
         />
    </RelativeLayout>



    <TextView
        android:id="@+id/list_row_textView_Secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Number of items"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/list_row_Main"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/list_row_textView_Secondary"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_people_black_24dp" />


</RelativeLayout>