<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="de.cs.fau.mad.kwikshop.android.view.ShoppingListDetailActivity"
    android:background="@color/text_icons">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ShoppingListName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:selectAllOnFocus="true"
        android:text="SAMPLE TEXT"
        android:singleLine="true"
        android:inputType="textCapSentences"/>


    <Button
        android:id="@+id/create_calendar_event"
        android:text="@string/create_calendar_event"
        android:layout_margin="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/edit_calendar_event"
        android:text="@string/edit_calendar_event"
        android:layout_margin="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</RelativeLayout>
